pipeline {
    agent any

    stages {
        /*stage('Build'){
            steps {
                sh yarn build:linux
            }
        }*/
        stage('Test') {
            steps {
                sh 'curl -sL https://deb.nodesource.com/setup_14.x | -E bash -'
                sh 'apt-get install nodejs npm -y'
                sh 'npm install --global yarn'
                sh 'yarn -v'
                sh 'yarn'
                sh 'yarn test'
            }
        }
    }
    post {
        always {
            echo "Process finished";
        }
        success{
            echo "Success";
        }
        failure {
            echo "Failure";
            mail body: "Please visit jenkins for further information", subject: "Job  failed", to: "maattizdabrowy@op.pl";
        }
    }
}