pipeline {
    agent any

    stages {
        /*stage('Build'){
            steps {
                sh yarn build:linux
            }
        }*/
        stage('Test') {
            steps {
                sh 'apt-get install yarn -y'
                sh 'yarn test'
            }
        }
    }
    post {
        always {
            echo "Process finished";
        }
        success{
            echo "Success";
        }
        failure {
            echo "Failure";
            /*mail (
                to: 'maattizdabrowy@op.pl',
                subject: "Job  failed",
                body: "Please visit jenkins for further information"
            );*/
            mail body: "Please visit jenkins for further information", cc: '', charset: 'UTF-8', subject: "Job  failed", to: "maattizdabrowy@op.pl";
        }
    }
}